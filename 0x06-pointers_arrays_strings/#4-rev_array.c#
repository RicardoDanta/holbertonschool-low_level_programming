#include <stdio.h>
#include "main.h"
/**
 * reverse_array - a function to print contents of an array
 * @a: an array of integers
 * @n: the number of elements to swap
 * Return: Always 0
 */
void reverse_array(int *a, int n)
{
	int c = 0;
	while (c < n)
	{
		if (c != 0)
		{
			printf (", ");
		}
			printf ("%d", a[c]);
			c++;
	}
		printf ("\n");
}